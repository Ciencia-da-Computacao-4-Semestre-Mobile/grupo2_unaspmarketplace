<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomePageActivity">

    <!-- =================================================================== -->
    <!--   SEÇÃO 1: CONTEÚDO PRINCIPAL DA PÁGINA                           -->
    <!-- =================================================================== -->

    <!-- 1. HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:background="#004080"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container do Logo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logo_container"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="irParaHomePage"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/logo_unasp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Logo Unasp Marketplace"
                android:scaleType="centerCrop"
                android:src="@drawable/logobrancounaspmarketplace" />
        </androidx.cardview.widget.CardView>

        <!-- Barra de Pesquisa -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/search_bar_background"
            android:hint="busque aqui"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo_container"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. ÁREA DE CONTEÚDO PRINCIPAL (FUNDO CINZA) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_content_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/footer_bar_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <!-- Grid de Produtos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="4dp" />
    </androidx.cardview.widget.CardView>

    <!-- 3. RODAPÉ (FOOTER) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/footer_bar_container"
        android:layout_width="0dp"
        android:layout_height="66dp"
        app:cardBackgroundColor="#004080"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- LinearLayout com os 4 ícones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- BOTÃO 1: MENU -->
            <LinearLayout
                android:id="@+id/menu_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iconmenu"
                    android:contentDescription="Menu" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- BOTÃO 2: HOME -->
            <LinearLayout
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iconhome"
                    android:contentDescription="Home" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- BOTÃO 3: NOTIFICAÇÃO -->
            <LinearLayout
                android:id="@+id/notification_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iconnotification"
                    android:contentDescription="Notificação" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avisos"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- BOTÃO 4: CARRINHO -->
            <LinearLayout
                android:id="@+id/cart_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iconcarrinho"
                    android:contentDescription="Carrinho" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrinho"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- =================================================================== -->
    <!--   SEÇÃO 2: COMPONENTES DO MENU LATERAL (FICAM NA FRENTE)          -->
    <!-- =================================================================== -->

    <!-- 4. FUNDO ESCURECIDO (SCRIM) -->
    <!-- Ficará visível quando o menu abrir para dar foco ao painel. -->
    <View
        android:id="@+id/scrim_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 5. PAINEL DO MENU LATERAL -->
    <!-- Este é o painel cinza que deslizará da esquerda. -->
    <FrameLayout
        android:id="@+id/menu_panel"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="#D9D9D9"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/footer_bar_container"
        app:layout_constraintStart_toStartOf="parent">

        <!--
            O CONTEÚDO DO SEU MENU VIRÁ AQUI DENTRO.
            Por enquanto, está vazio como solicitado.
            (Ex: Um outro RecyclerView, botões, etc.)
        -->

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
