<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:background="#004080"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Container do Logo com Canto Arredondado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logo_container"
        android:layout_width="37dp"
        android:layout_height="37dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="irParaHomePage"
        android:clickable="true"
        android:focusable="true">

        <!-- Imagem do Logo -->
        <ImageView
            android:id="@+id/logo_unasp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logobrancounaspmarketplace"
            android:scaleType="centerCrop"
            android:contentDescription="Logo Unasp Marketplace" />

    </androidx.cardview.widget.CardView>

    <!-- Barra de Pesquisa -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:hint="busque aqui"
        android:background="@drawable/search_bar_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/logo_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
