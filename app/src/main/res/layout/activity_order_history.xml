<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_default"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Histórico de Pedidos"
        app:titleTextColor="@android:color/white" />

    <!-- RecyclerView para pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:visibility="gone" />

    <!-- Estado vazio -->
    <LinearLayout
        android:id="@+id/txtEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="@color/gray_300"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhum pedido encontrado"
            android:textColor="@color/gray_600"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Você ainda não fez nenhum pedido.\nComece explorando nossos produtos!"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Começar a Comprar"
            android:backgroundTint="@color/blue_default"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
