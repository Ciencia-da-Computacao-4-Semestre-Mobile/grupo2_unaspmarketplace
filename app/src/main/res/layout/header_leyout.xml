<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_container"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:background="#004080"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Container do Logo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logo_container"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="irParaHomePage"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_unasp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Logo Unasp Marketplace"
            android:scaleType="centerCrop"
            android:src="@drawable/logobrancounaspmarketplace" />
    </androidx.cardview.widget.CardView>

    <!-- Barra de Pesquisa -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/search_bar_background"
        android:hint="busque aqui"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_container"
        app:layout_constraintTop_toTopOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>