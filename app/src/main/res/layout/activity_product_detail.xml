<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootProductDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header: usar MaterialToolbar facilita integraÃ§Ã£o com navigation -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:title="Detalhes do Produto"
        app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:titleCentered="true"
        app:navigationIcon="@android:drawable/ic_media_previous"
        android:contentDescription="@string/desc_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- ConteÃºdo principal rolÃ¡vel -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollProductDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarProduct"
        app:layout_constraintBottom_toTopOf="@id/bottom_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagem principal do produto -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProductImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imgProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/desc_product_image"
                    android:transitionName="productImage"
                    android:src="@drawable/ic_launcher_background"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <!-- RecyclerView horizontal para imagens secundÃ¡rias (thumbnails) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProductImages"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Nome -->
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Produto"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"
                tools:text="TÃªnis Esportivo XYZ" />

            <!-- Categoria -->
            <TextView
                android:id="@+id/txtProductCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textSize="14sp"
                android:textColor="@color/blue_default"
                android:layout_marginBottom="12dp"
                tools:text="Esportes / CalÃ§ados" />

            <!-- PreÃ§o -->
            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/blue_default"
                android:layout_marginBottom="12dp"
                tools:text="R$ 199,90" />

            <!-- Estoque -->
            <LinearLayout
                android:id="@+id/rowStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/labelStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estoque:"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtProductStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_default"
                    android:layout_marginStart="8dp"
                    tools:text="12 unidades" />
            </LinearLayout>

            <!-- DescriÃ§Ã£o -->
            <TextView
                android:id="@+id/labelDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescriÃ§Ã£o"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescriÃ§Ã£o do produto"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                tools:text="DescriÃ§Ã£o detalhada, materiais, cuidados e garantias." />

            <!-- Vendedor -->
            <TextView
                android:id="@+id/labelSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendedor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtSellerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Vendedor"
                android:textSize="16sp"
                android:textColor="@color/blue_default"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:text="Loja Exemplo" />

            <!-- BotÃ£o de contato -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContactSeller"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ’¬ Falar com o Vendedor"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:backgroundTint="@color/green"
                app:cornerRadius="8dp"
                android:contentDescription="@string/desc_contact_seller"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- SeÃ§Ã£o inferior fixa: quantidade + adicionar ao carrinho -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Controle de quantidade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecrease"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="@string/desc_decrease_quantity"
                android:backgroundTint="@color/gray_300"
                app:cornerRadius="22dp" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncrease"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="@string/desc_increase_quantity"
                android:backgroundTint="@color/blue_default"
                app:cornerRadius="22dp" />
        </LinearLayout>

        <!-- BotÃ£o Adicionar ao Carrinho -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Adicionar ao Carrinho"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue_default"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:contentDescription="@string/desc_add_to_cart" />
    </LinearLayout>

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/bottom_navigation_colors"
        app:itemTextColor="@color/bottom_navigation_colors"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/TextAppearance.AppCompat.Caption"
        app:itemTextAppearanceInactive="@style/TextAppearance.AppCompat.Caption"
        app:labelVisibilityMode="labeled"
        app:itemPaddingTop="4dp"
        app:itemPaddingBottom="4dp"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
