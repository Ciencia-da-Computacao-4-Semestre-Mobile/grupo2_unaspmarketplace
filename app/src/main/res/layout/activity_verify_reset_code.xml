<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="@string/reset_verify_reset_code"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- SubtÃ­tulo com email -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:text="@string/reset_code_sent_to_email"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:alpha="0.9" />

        <!-- Campo de cÃ³digo -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/white"
            android:hint="@string/reset_verification_code">

            <EditText
                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:letterSpacing="0.3"
                android:fontFamily="monospace"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Countdown -->
        <TextView
            android:id="@+id/txtCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="@string/reset_code_time"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.8" />

        <!-- BotÃ£o Verificar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/reset_verify_reset_code"
            android:textColor="@color/blue_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:enabled="false"
            app:cornerRadius="8dp" />

        <!-- BotÃ£o Reenviar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResendCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/reset_resend_code"
            android:textColor="@color/white"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/white"
            app:cornerRadius="8dp"
            android:backgroundTint="@android:color/transparent" />

        <!-- InstruÃ§Ãµes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:backgroundTint="@color/white"
            android:alpha="0.1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ InstruÃ§Ãµes:"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Verifique sua caixa de entrada e spam\nâ€¢ O cÃ³digo tem 5 dÃ­gitos\nâ€¢ VÃ¡lido por 15 minutos\nâ€¢ MÃ¡ximo de 3 tentativas"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.9"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>