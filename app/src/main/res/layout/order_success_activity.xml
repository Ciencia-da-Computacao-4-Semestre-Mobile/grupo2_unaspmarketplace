<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="32dp"
    android:gravity="center">

    <!-- Ícone de sucesso -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/info_24px"
        android:layout_marginBottom="24dp"
        app:tint="@color/blue_default" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_sent_success"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue_default"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- ID do Pedido -->
    <TextView
        android:id="@+id/txtOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedido: #PED12345678"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Nome do Cliente -->
    <TextView
        android:id="@+id/txtCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente: João Silva"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Mensagem -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_sent_message"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Botão voltar -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_home"
        android:backgroundTint="@color/blue_default"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
